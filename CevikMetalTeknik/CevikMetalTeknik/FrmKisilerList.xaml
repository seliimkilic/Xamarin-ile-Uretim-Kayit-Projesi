<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CevikMetalTeknik.FrmKisilerList">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Ekle" Clicked="kisi" Order="Primary" Priority="1"/>



    </ContentPage.ToolbarItems>
    <StackLayout>


        <ListView x:Name="a" ItemsSource="{Binding}"  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding KisiAd}"  >



                    </TextCell>

                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>