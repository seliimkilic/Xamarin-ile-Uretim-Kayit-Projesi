            <Button BackgroundColor="#ff6600" Grid.Row="2" Grid.Column="0" Text="Parça/Salkım Resmi Gor" TextColor="White" Margin="5" />
            <Button BackgroundColor="#ff6600" Grid.Row="2" Grid.Column="1" Text="Mesaj Yaz" TextColor="White" Margin="5" Clicked="mesaj"/>
