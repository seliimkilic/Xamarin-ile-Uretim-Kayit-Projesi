<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CevikMetalTeknik.Frmdeneme">
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition  Width="*" />
            </Grid.ColumnDefinitions>

            <Button BackgroundColor="#ec9b3b" Grid.Row="0" Grid.Column="0" Text="Button 0,0" TextColor="White" Margin="5" />
            <Button BackgroundColor="#ec9b3b" Grid.Row="0" Grid.Column="1" Text="Button 0,1" TextColor="White" Margin="5"/>
            <Button BackgroundColor="#ec9b3b" Grid.Row="1" Grid.Column="0" Text="Button 1,0" TextColor="White" Margin="5"/>
            <Button BackgroundColor="#ec9b3b" Grid.Row="1" Grid.Column="1" Text="Button 1,1" TextColor="White" Margin="5"/>
            <Button BackgroundColor="#ec9b3b" Grid.Row="2" Grid.Column="0" Text="Button 2,0" TextColor="White" Margin="5" />
            <Button BackgroundColor="#ec9b3b" Grid.Row="2" Grid.Column="1" Text="Button 2,1" TextColor="White" Margin="5"/>
        </Grid>

















       



    </ContentPage.Content>
</ContentPage>