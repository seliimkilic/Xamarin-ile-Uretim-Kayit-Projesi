<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CevikMetalTeknik.FrmHata" Title="Hata Bildirimi" >
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="https://cdn-icons-png.flaticon.com/512/83/83574.png"
                     x:Name="btnTakePhoto"
                     />
    </ContentPage.ToolbarItems>
   
    
    <ContentPage.Content>
        
       
        
        
        <StackLayout>
            
            <Button x:Name="btnPickPhoto"
                    Text="Fotoğraf Seç"
                    Clicked="btnPickPhoto_Clicked"/>
            <Entry x:Name="mesaj" Placeholder="mesaj yazınız"/>
            <Button Text="Kaydet" Clicked="kaydet"/>
           
              <StackLayout >
        <Image x:Name="image"/>
    </StackLayout>

        </StackLayout>
        
        
   
    
     </ContentPage.Content>
    
    
    

</ContentPage>