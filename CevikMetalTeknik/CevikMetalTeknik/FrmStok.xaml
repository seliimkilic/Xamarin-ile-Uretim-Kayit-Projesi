<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CevikMetalTeknik.FrmStok" Padding="10,40" Title="Stok Ekleme Sayfası">


    

    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Stok Ekle" >
                    <EntryCell Label="Stok Adı" x:Name="Ad"/>
                    <EntryCell Label="Stok Kodu" x:Name="Kod" />
                    
                    <ViewCell>
                        <Button Text="Kaydet" Clicked="Kaydet" Grid.Column="0"/>
                      
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
    
    
    
</ContentPage>