<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CevikMetalTeknik.Frmkisiekle">

    <StackLayout >
        
        
        <Entry Placeholder="Ad Soyad"  x:Name="ad" />
        <Entry Placeholder="Tc Kimlik No" x:Name="tc" />
        
        <Entry Placeholder="Cep Telefonu"  x:Name="cep" />
        <Entry Placeholder="SGK Sicil No" x:Name="sgk" />
        <Entry Placeholder="Adres" x:Name="adres" />
        <Picker x:Name="op" Title="Operasyon Seç" ItemsSource="{Binding OperasyonAd}"  ItemDisplayBinding="{Binding OperasyonAd}" />
        <Button Text="Kaydet" Clicked="kaydet" />
        
    </StackLayout>

</ContentPage>